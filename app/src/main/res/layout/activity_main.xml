<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Declares a button that starts 2nd activity -->
    <Button
        android:id="@+id/btn_start_second_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnStartActivityClicked"
        android:text="@string/second_activity_name"
        />

    <!-- Declares a button that opens a browser -->
    <Button
        android:id="@+id/btn_select_contact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_action_search"
        android:onClick="btnSelectContactClicked"
        android:text="@string/select_contact_name" />

    <!-- Button can be pressed, or clicked, by the user to perform an action. -->
    <Button
        android:id="@+id/btn_cevapi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="showCevapi"
        android:text="@string/open_food_cevapi"
        />

    <Button
        android:id="@+id/btn_sarma"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="showSarma"
        android:text="@string/open_food_sarma" />

</LinearLayout>